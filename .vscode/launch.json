    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${workspaceRoot}/.venv/${workspaceFolderBasename}/bin/python",
            "program": "${workspaceRoot}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:5000",
                "--no-color",
                "--noreload"
            ],
            "env": {
                "USE_DOCKER": false
            },
            "envFile": ""
        }
    ]
}